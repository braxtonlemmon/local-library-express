<h1><%= title %></h1>

<form action="" method="POST">
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input 
      type="text" 
      class="form-control"
      id="first_name"
      placeholder="First name"
      name="first_name"
      required="true"
      value="<%= locals.author ? author.first_name : '' %>"
    >
    <label for="family_name">Family Name:</label>
    <input 
      type="text" 
      class="form-control"
      id="family_name"
      placeholder="Family name (surname)"
      name="family_name"
      require="true"
      value="<%= locals.author ? author.family_name : '' %>"
    >
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth:</label>
    <input 
      type="date" 
      class="form-control"
      id="date_of_birth"
      name="date_of_birth"
      value="<%= locals.author ? author.date_of_birth : '' %>"
    >
    <label for="date_of_death">Date of death:</label>
    <input 
      type="date" 
      class="form-control"
      id="date_of_death"
      name="date_of_death"
      value="<%= locals.author ? author.date_of_death : '' %>"
    >
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
  <% if (locals.errors) { %>
    <ul>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</form>