<h1><%= title %></h1>

<% if (book_instances.length) { %>
  <p>Delete the following copies before attempting to delete this book</p>
  <div style="margin-left: 20px; margin-top: 20px">
    <h4>Books</h4>
    <dl>
      <% book_instances.forEach(book => { %>
      <dt>
        <a href="<%= book.url %>"><%= book._id %></a>
      </dt>

      <%}) %>
    </dl>
  </div>
<% } else { %>
  <p>Do you really want to delete this book?</p>
  <form action="" method="POST">
    <div class="form-group">
      <input type="hidden" id="bookid" name="bookid" required="true" value="<%= book._id %>" class="form-control">
    </div>
    <button class="btn btn-primary" type="submit">Delete</button>
  </form>
<% } %>